<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="180.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.ixsen.streamlinkvodhelper.view.SettingsController">
    <children>
        <VBox AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="pathStreamlink" promptText="Path to streamlink">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="20.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="clientId" layoutX="30.0" layoutY="30.0" promptText="ClientID">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="20.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="freeSlot" layoutX="10.0" layoutY="55.0" promptText="Free Slot">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="20.0"/>
                    </VBox.margin>
                </TextField>
                <ToolBar>
                    <items>
                        <Button mnemonicParsing="false" onAction="#saveClicked" text="Save"/>
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                    </items>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </ToolBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
