<?xml version="1.0" encoding="UTF-8"?>

<?import de.ixsen.streamlinkvodhelper.custom.components.NumericTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.ixsen.streamlinkvodhelper.view.SettingsController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Path to streamlink">
                    <VBox.margin>
                        <Insets left="6.0" top="15.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="pathStreamlink" promptText="not necessary if streamlink is in path">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </TextField>
                <Label layoutX="10.0" layoutY="10.0" text="Amount of videos">
                    <VBox.margin>
                        <Insets left="6.0" top="15.0"/>
                    </VBox.margin>
                </Label>
                <NumericTextField fx:id="videoAmount" layoutX="30.0" layoutY="30.0" promptText="1-100">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </NumericTextField>
                <Label layoutX="10.0" layoutY="207.0" text="Player executable">
                    <VBox.margin>
                        <Insets left="6.0" top="15.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="freeSlot" layoutX="10.0" layoutY="55.0">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </TextField>
                <ToolBar>
                    <items>
                        <Button mnemonicParsing="false" onAction="#saveClicked" text="Save"/>
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                    </items>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </ToolBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
