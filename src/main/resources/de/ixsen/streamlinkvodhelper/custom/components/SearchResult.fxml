<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox maxWidth="-Infinity" prefWidth="320.0" style="-fx-background-color: #e1e1e1; -fx-background-radius: 5;"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <StackPane>
                    <children>
                        <ImageView fx:id="thumbnail" fitHeight="180.0" fitWidth="320.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <Label fx:id="duration" alignment="BOTTOM_RIGHT"
                               style="-fx-background-color: #ffffffb0; -fx-background-radius: 4;" text="Duration"
                               textAlignment="RIGHT" StackPane.alignment="BOTTOM_RIGHT">
                            <StackPane.margin>
                                <Insets right="5.0"/>
                            </StackPane.margin>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <padding>
                                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                            </padding>
                        </Label>
                    </children>
                </StackPane>
                <Label fx:id="title" text="Title">
                    <VBox.margin>
                        <Insets left="9.0" right="9.0" top="9.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                    </padding>
                </Label>
                <Label fx:id="pubDate" layoutX="10.0" layoutY="27.0" text="Date">
                    <VBox.margin>
                        <Insets left="9.0" right="9.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                    </padding>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
    <effect>
        <InnerShadow/>
    </effect>
</fx:root>
